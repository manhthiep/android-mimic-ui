<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sectionViewsContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="0dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip" >

    <LinearLayout
        android:id="@+id/sectionHeaderView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sectionHeaderText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="0dip"
            android:paddingLeft="15dip"
            android:paddingBottom="5dip"
            android:textSize="15sp"
            android:textColor="#ff58585e"
            android:text="SECTION HEADER" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sectionItemsContainer"
        style="@style/uitableview_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/sectionFooterView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
        <TextView
            android:id="@+id/sectionFooterText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dip"
            android:paddingTop="5dip"
            android:textSize="12sp"
            android:textColor="#ff58575d"
            android:text="Section Footer" />
    </LinearLayout>
</LinearLayout>